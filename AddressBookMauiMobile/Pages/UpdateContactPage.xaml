<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pagemodels="clr-namespace:AddressBookMauiMobile.PageModels"
             x:Class="AddressBookMauiMobile.Pages.UpdateContactPage"
             x:DataType="{x:Type pagemodels:UpdateContactPageModel}"
             Title="UpdateContactPage">

    <VerticalStackLayout>
        <Frame>
            <StackLayout>
                <Label Text="First name: "/>
                <Entry Text="{Binding Contact.FirstName}" MinimumWidthRequest="200" IsSpellCheckEnabled="False" IsTextPredictionEnabled="False"/>
                <Label Text="Last name: " />
                <Entry Text="{Binding Contact.LastName}" MinimumWidthRequest="200"/>
                <Label Text="E-mail: " />
                <Entry Text="{Binding Contact.Email}" MinimumWidthRequest="200"/>
                <Label Text="Phone: " />
                <Entry Text="{Binding Contact.Phone}" MinimumWidthRequest="200"/>
                <Label Text="Address: " />
                <Entry Text="{Binding Contact.Address}" MinimumWidthRequest="200"/>
                <Button Text="Update" Command="{Binding ContactToUpdateCommand}" />
            </StackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>