<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pagemodels="clr-namespace:AddressBookMauiMobile.PageModels"
             x:Class="AddressBookMauiMobile.MainPage"
             x:DataType="{x:Type pagemodels:MainPageModel}"
             >


    <ScrollView>
        <Grid BackgroundColor="#FFF5E1">
            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Start" Margin="0,150,0,0">
                <Label Text="Welcome to Address Book" FontSize="46"/>
                <Label Text="A simple way to store you contacts" FontSize="16" HorizontalOptions="Center"/>
            </VerticalStackLayout>
            <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                <Button Text="Add Contact" Command="{Binding NavigateToAddContactCommand}" MinimumWidthRequest="200"/>
                <Button Text="Contacts" Command="{Binding NavigateToGetContactsCommand}" MinimumWidthRequest="200"/>
            </HorizontalStackLayout>
        </Grid>
    </ScrollView>

</ContentPage>
